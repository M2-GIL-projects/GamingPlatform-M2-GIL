@model List<IGrouping<string, Score>>

<div class="container mt-5">
    <h1 class="text-center text-primary mb-3">Classements par jeu</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            <strong>Aucun score disponible pour le moment !</strong>
        </div>
    }
    else
    {
        @foreach (var gameGroup in Model)
        {
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">Jeu : @(string.IsNullOrEmpty(gameGroup.Key) ? "Non spécifié" : gameGroup.Key)</h2>
                    <span class="badge bg-light text-primary">@gameGroup.Count() joueurs</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Joueur</th>
                                    <th scope="col">WPM</th>
                                    <th scope="col">Précision</th>
                                    <th scope="col">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var score in gameGroup.Select((s, index) => new { Score = s, Rank = index + 1 }))
                                {
                                    <tr>
                                        <th scope="row">@score.Rank</th>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px; font-size: 1.2rem;">
                                                    @score.Score.Pseudo.Substring(0, 1).ToUpper()
                                                </div>
                                                <span>@score.Score.Pseudo</span>
                                            </div>
                                        </td>
                                        <td>@score.Score.WPM</td>
                                        <td>@score.Score.Accuracy.ToString("F2")%</td>
                                        <td>@score.Score.DatePlayed.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    Dernière mise à jour : @DateTime.Now.ToShortDateString()
                </div>
            </div>
        }
    }
</div>
