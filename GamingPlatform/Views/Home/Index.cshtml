<section id="games" class="container my-5">
    <h2 class="text-center mb-4">Nos Jeux</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var game in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card game-card">
                        <img src="@game.ImageUrl" class="card-img-top" alt="@game.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@game.Name</h5>
                            <p class="card-text">@game.Description</p>
                            <a href="@Url.Action("Index", "@(game.Name)Game")" class="btn btn-primary">Jouer</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Aucun jeu disponible pour le moment.</p>
        }
    </div>
</section>


<section class="container my-5">
    <h2 class="text-center mb-4">Fonctionnalités</h2>
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card feature-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users mr-2"></i>Lobbys publics et privés</h5>
                    <p class="card-text">Créez ou rejoignez des lobbys pour jouer avec vos amis. Option de lobbys privés
                        avec mot de passe.</p>
                    <a href="@Url.Action("Index", "Lobby")" class="btn btn-outline-primary">Voir les lobbys</a>
                    <button class="btn btn-success btn-lg" data-toggle="modal"
                        data-target="#createLobbyGlobalModal">Créer un lobby</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card feature-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-trophy mr-2"></i>Classements</h5>
                    <p class="card-text">Consultez les meilleurs scores pour chaque jeu et relevez des défis.</p>
                    <a href="@Url.Action("Index", "Leaderboard")" class="btn btn-outline-primary">Voir les
                        classements</a>
                </div>
            </div>
        </div>
    </div>

</section>


<!-- Modal pour créer un lobby avec le choix des jeux -->
<div class="modal fade" id="createLobbyGlobalModal" tabindex="-1" role="dialog" aria-labelledby="createLobbyModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createLobbyModalLabel">Créer un Nouveau Lobby</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createLobbyForm">
                    <div class="form-group">
                        <label for="lobbyName">Nom du lobby</label>
                        <input type="text" class="form-control" id="lobbyName" placeholder="Nom du lobby" required>
                    </div>

                    <div class="form-group">
                        <label for="game">Choisir un jeu</label>
                        <select name="game" class="form-control" id="game" required>
                            <option value="">Speed Typing</option>
                            <option value="">Morpion</option>
                            <option value="">Petit Bac</option>
                        </select>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="privateLobby">
                        <label class="form-check-label" for="privateLobby">Créer un lobby privé</label>
                    </div>

                    <div id="passwordField" class="form-group d-none mt-3">
                        <label for="lobbyPassword">Mot de passe</label>
                        <input type="password" class="form-control" id="lobbyPassword" placeholder="Mot de passe">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" onclick="createGlobalLobbyForm()">Créer</button>
            </div>
        </div>
    </div>
</div>
